@using Exam21.Core.Models;
@model List<Portfolio>

<a asp-action="Create" type="button" class="btn btn-success">Create</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">ImageUrl</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th colspan="2" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td class="text-center" colspan="4">No data</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ImageUrl</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" type="button" class="btn btn-secondary">Update</a>
                    </td>
                    <td>

                        <form method="post">
                            <button asp-action="Delete" asp-route-id="@item.Id" type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>